import os, sys, pathlib
_root = os.environ.get("OOM")
if not _root:
    _root = pathlib.Path(__file__).resolve().parents[6]
else:
    _root = pathlib.Path(_root)
_uv_default = pathlib.Path.home() / ".cache" / "uv" / "venvs" / "oom-dcc"
_uv = os.environ.get("UV_PROJECT_ENVIRONMENT", str(_uv_default))
_paths = [
    pathlib.Path(_uv) / "lib" / f"python{sys.version_info.major}.{sys.version_info.minor}" / "site-packages",
    _root / "src",
    _root / "oom-core",
]
for _p in _paths:
    if _p.exists():
        sys.path.insert(0, str(_p))
